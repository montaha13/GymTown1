<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #f0f0f0, #e0c3fc); -fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterParticipation">
   <children>
      <!-- Titre -->
      <Text text="Ajouter une Participation" layoutX="200.0" layoutY="30.0" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #8e44ad;" />

      <!-- Label et champ de texte pour la date de participation -->
      <Label text="Date de participation :" layoutX="50.0" layoutY="80.0" style="-fx-text-fill: #8e44ad;" />
      <TextField fx:id="dateParticipationt" layoutX="200.0" layoutY="75.0" prefWidth="300.0" promptText="Entrez la date" style="-fx-background-color: #f0f0f0; -fx-border-color: #8e44ad; -fx-border-radius: 5;" />

      <!-- Label et champ de texte pour le montant payé -->
      <Label text="Montant payé :" layoutX="50.0" layoutY="120.0" style="-fx-text-fill: #8e44ad;" />
      <TextField fx:id="montantPayet" layoutX="200.0" layoutY="115.0" prefWidth="300.0" promptText="Montant payé" style="-fx-background-color: #f0f0f0; -fx-border-color: #8e44ad; -fx-border-radius: 5;" />

      <!-- Bouton Participer -->
      <Button layoutX="250.0" layoutY="200.0" mnemonicParsing="false" onAction="#participer" text="Participer" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5;" />
   </children>
</AnchorPane>
